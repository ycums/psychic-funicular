<?xml version="1.0" encoding="utf-8"?>

<Config version="0.0">
  <Basic>
    <Tilte>Config01</Tilte>
  </Basic>
  <aplication-group Name="CLIP STUDIO PAINT">
    <matching-rule>
      <exe-name>ClipStudioPaint.exe</exe-name>
      <window-title-patterns>
        <pattern>*CLIP STUDIO PAINT</pattern>
        <pattern>ショートカット設定</pattern>
      </window-title-patterns>
    </matching-rule>
    <banks>
      <bank name="base">
        <entry trigger="Num9">
          <action action-type="send" actin-value="wd" label-name="前景" label-color="#FAFAFA" />
        </entry>
        <entry trigger="Num6">
          <action action-type="send" actin-value="wx" label-name="消し" label-color="#FAF0FA" />
        </entry>
        <entry trigger="Num3">
          <action action-type="menu" actin-value="menu01" label-name="メニュー01" label-color="#F0FAFA" />
        </entry>
      </bank>
      <bank name="曲線">
        <entry trigger="Num9">
          <action action-type="send" actin-value="{Enter}" label-name="Enter" label-color="#FAFAFA" />
        </entry>
        <entry trigger="Num6">
          <action action-type="send" actin-value="{Escape}" label-name="Esc" label-color="#FAF0FA" />
        </entry>
      </bank>
      <bank name="直線">
        <entry trigger="Num9">
          <action action-type="send" actin-value="{Enter}" label-name="Enter" label-color="#FAFAFA" />
        </entry>
        <entry trigger="Num6">
          <action action-type="send" actin-value="{Escape}" label-name="Esc" label-color="#FAF0FA" />
        </entry>
        <entry trigger="Num3">
          <action action-type="Key" actin-value="{Shift}" label-name="Shift" label-color="#F0FAFA" />
        </entry>
      </bank>
    </banks>
    <menus>
      <menu name="menu01">
        <menu-item x="0" y="0">
          <action label-name="閉じる" />
        </menu-item>
        <menu-item x="1" y="0">
          <action label-name="ペン入れ" label-color="blue" action-type="send" action-value="{F24}" next-bank="曲線" />
        </menu-item>
        <menu-item x="-1" y="0">
          <action label-name="直線" label-color="blue" action-type="send" action-value="," next-bank="直線" />
        </menu-item>
      </menu>
    </menus>
  </aplication-group>
</Config>